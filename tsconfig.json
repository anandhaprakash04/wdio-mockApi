{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": "./main",
    "resolveJsonModule": true,
    "typeRoots" : ["./node_modules/@types"],
    "paths": {
      "@fixture/*": ["fixture/*"]
    },
    "types": ["node", "@wdio/sync", "@wdio/jasmine-framework", "expect-webdriverio"]
  },
  "include": [
    "./main/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
